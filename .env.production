# Omtobe MVP v0.1: Production Environment Variables
# 
# SECURITY WARNING: Never commit this file to git
# Use Vercel dashboard to set these variables

# ============================================================================
# DATABASE CONFIGURATION (Production PostgreSQL)
# ============================================================================

# PostgreSQL connection string (production)
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://omtobe_prod:SECURE_PASSWORD@db.omtobe.app:5432/omtobe_mvp?sslmode=require

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Secret (minimum 32 characters, use cryptographically secure random)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_secure_jwt_secret_key_min_32_chars

# Environment mode
ENVIRONMENT=production
DEBUG=false

# ============================================================================
# APPLE HEALTHKIT OAUTH
# ============================================================================

# Register at: https://developer.apple.com
HEALTHKIT_CLIENT_ID=your_healthkit_client_id
HEALTHKIT_CLIENT_SECRET=your_healthkit_client_secret
HEALTHKIT_REDIRECT_URI=https://omtobe.app/api/v1/auth/healthkit/callback

# ============================================================================
# GOOGLE CALENDAR OAUTH
# ============================================================================

# Register at: https://console.cloud.google.com
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=https://omtobe.app/api/v1/auth/google/callback

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API base URL for frontend
API_BASE_URL=https://omtobe.app/api

# API timeout (milliseconds)
API_TIMEOUT=10000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry error tracking
SENTRY_DSN=your_sentry_dsn_url

# Application monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# SECURITY HEADERS
# ============================================================================

# CORS allowed origins
CORS_ORIGINS=https://omtobe.app,https://www.omtobe.app

# HSTS max age (seconds)
HSTS_MAX_AGE=31536000

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Frontend API base URL
VITE_API_BASE_URL=https://omtobe.app/api
VITE_API_TIMEOUT=10000

# Analytics
VITE_ANALYTICS_ENABLED=true

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Vercel deployment region
VERCEL_REGION=iad1

# Auto-scaling
AUTO_SCALE_MIN_INSTANCES=1
AUTO_SCALE_MAX_INSTANCES=10

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================

# Database backup frequency (hours)
BACKUP_FREQUENCY=24

# Backup retention (days)
BACKUP_RETENTION=30

# ============================================================================
# COMPLIANCE & PRIVACY
# ============================================================================

# GDPR compliance mode
GDPR_MODE=true

# Data retention policy (days)
DATA_RETENTION_DAYS=365

# Privacy policy URL
PRIVACY_POLICY_URL=https://omtobe.app/privacy
